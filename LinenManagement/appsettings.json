{
    "Serilog": {
        "MinimumLevel": "Debug", // Can be changed to Information to reduce amount of logs generated
        "Using": [ "Serilog.Sinks.File" ],
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ], 
        // Logs can be written to console, file or even Database, here we are writing to rolling files, 
        // which are deleted by default after 30 days, this value can be changed
        "Enrich": [ "FromLogContext", "WithMachineName" ]
    },

    "AllowedHosts": "*",

    // Ideally these secret/sensitive values would either be stored in a secure location 
    // such as Azure Key Vault or similar, or else they would be encrypted and stored
    // in appsettings then decrypted in Program.cs and used

